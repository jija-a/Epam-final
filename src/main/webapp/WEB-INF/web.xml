<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">
    <display-name>webHello</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!--Servlet-->
    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>by.alex.testing.controller.FrontController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <!--Filters-->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.alex.testing.controller.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--<filter>
        <filter-name>PageRedirectSecurityFilter</filter-name>
        <filter-class>by.alex.testing.controller.filter.PageRedirectSecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PageRedirectSecurityFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>-->

    <filter>
        <filter-name>XSSFilter</filter-name>
        <filter-class>by.alex.testing.controller.filter.XSSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>XSSFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CookieLocaleFilter</filter-name>
        <filter-class>by.alex.testing.controller.filter.CookieLocaleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CookieLocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--Listeners-->
    <listener>
        <listener-class>by.alex.testing.controller.listener.ContextListener</listener-class>
    </listener>

    <listener>
        <listener-class>by.alex.testing.controller.listener.SessionListenerImpl</listener-class>
    </listener>

    <!--Error-->
    <error-page>
        <error-code>400</error-code>
        <location>/jsp/error/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/jsp/sign-up.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/jsp/error/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/jsp/error/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>by.alex.testing.service.ServiceException</exception-type>
        <location>/jsp/error/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/jsp/error/error.jsp</location>
    </error-page>

    <!--Session config-->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
